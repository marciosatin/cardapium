{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="panel col-xs-12">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Ver estado
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <a class="btn btn-primary notika-btn-primary" href="{{ route('states.edit',{'id': state.id}) }}">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                            <a class="btn btn-danger notika-btn-danger" href="{{ route('states.delete',{'id': state.id}) }}">
                                <span class="glyphicon glyphicon-remove"></span>
                            </a>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th scope="row">id</th>
                                        <td>{{ state.id }}</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Nome</th>
                                        <td scope="row">{{ state.name }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}